{
  "name": "dtdl-visualisation-tool",
  "version": "0.0.83",
  "description": "CLI tool for dtdl visualisation",
  "main": "src/index.js",
  "bin": {
    "dtdl-visualiser": "./build/src/index.js"
  },
  "type": "module",
  "scripts": {
    "depcheck": "depcheck",
    "test:unit": "SWRC=true NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./src/**/*.test.ts",
    "test:e2e": "playwright test --ui",
    "test:playwright": "playwright test --trace on --max-failures=1",
    "build": "npm run tsoa:build && swc ./src ./package.json -d ./build --copy-files",
    "clean": "rimraf -rf ./build",
    "dev": "npm run tsoa:build && node --import '@swc-node/register/esm-register' ./src/index.ts",
    "tsoa:build": "tsoa spec-and-routes",
    "local": "npm i -g && dtdl-visualiser",
    "lint": "eslint .",
    "check": "npm run tsoa:build && tsc --noEmit",
    "xss-scan": "xss-scan"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/dtdl-visualisation-tool.git"
  },
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "dependencies": {
    "@digicatapult/dtdl-parser": "^0.0.42",
    "@kitajs/html": "^4.2.4",
    "@kitajs/ts-html-plugin": "^4.1.0",
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "@tsoa/runtime": "^6.5.1",
    "@types/compression": "^1.7.5",
    "body-parser": "^1.20.3",
    "chai": "^5.1.2",
    "chai-jest-snapshot": "^2.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "envalid": "^8.0.0",
    "express": "^4.21.1",
    "fuse.js": "^7.0.0",
    "htmx-ext-json-enc": "^2.0.1",
    "htmx.org": "^1.9.12",
    "jsdom": "^25.0.1",
    "lru-cache": "^11.0.2",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "puppeteer": "^23.10.0",
    "react": "^19.0.0",
    "reflect-metadata": "^0.2.2",
    "svg-pan-zoom": "^3.6.2",
    "tsoa": "^6.5.1",
    "tsyringe": "^4.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@playwright/test": "^1.49.0",
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.9.3",
    "@types/chai": "^5.0.1",
    "@types/chai-jest-snapshot": "^1.3.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.1",
    "@types/pino-http": "^5.8.4",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "mermaid": "^11.4.1",
    "mocha": "^11.0.1",
    "playwright-ctrf-json-reporter": "^0.0.18",
    "prettier": "^3.4.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">= 20"
  }
}
