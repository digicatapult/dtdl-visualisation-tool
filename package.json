    "@types/mocha": "^10.0.7",
    "@types/node": "^22.5.4",
    "@types/pino-http": "^5.8.4",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "sinon": "^19.0.2",
    "typescript": "^5.6.2"
  }
