{
  "name": "dtdl-visualisation-tool",
  "version": "0.0.22",
  "description": "CLI tool for dtdl visualisation",
  "main": "src/index.js",
  "bin": {
    "dtdl-visualiser": "./build/src/index.js"
  },
  "type": "module",
  "scripts": {
    "depcheck": "depcheck",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./src/**/*.test.ts",
    "build": "npm run tsoa:build && swc ./src ./package.json -d ./build --copy-files",
    "clean": "rimraf -rf ./build",
    "tsoa:build": "tsoa spec-and-routes",
    "local": "npm i -g && dtdl-visualiser",
    "lint": "eslint .",
    "check": "npm run tsoa:build && tsc --noEmit",
    "interop:debug": "dotnet build interop",
    "interop:build": "dotnet build interop --configuration Release",
    "xss-scan": "xss-scan"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/dtdl-visualisation-tool.git"
  },
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "dependencies": {
    "@kitajs/html": "^4.2.2",
    "@kitajs/ts-html-plugin": "^4.1.0",
    "@mermaid-js/layout-elk": "^0.1.5",
    "@tsoa/runtime": "^6.4.0",
    "@types/compression": "^1.7.5",
    "body-parser": "^1.20.3",
    "chai": "^5.1.1",
    "chai-jest-snapshot": "^2.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "envalid": "^8.0.0",
    "express": "^4.21.1",
    "htmx-ext-json-enc": "^2.0.1",
    "htmx.org": "^1.9.12",
    "mermaid": "^11.3.0",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "react": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "tsoa": "^6.4.0",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.4.1-nightly.20240914",
    "@swc/core": "^1.7.28",
    "@types/chai": "^5.0.0",
    "@types/chai-jest-snapshot": "^1.3.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.7.5",
    "@types/pino-http": "^5.8.4",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "depcheck": "^1.4.7",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">= 20"
  }
}